<% layout('/layouts/boilerplate') -%>

<body>
  <h3>All Listings</h3>

  <div class="row">
    <% for (let listing of allListings) { %>
      <div class="col-md-4 mb-4">
        <a href="/listings/<%= listing._id %>" style="text-decoration: none; color: inherit;">
          <div class="card" style="width: 20rem;">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img"   style="height: 20rem">
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text">â‚¹<%= listing.price.toLocaleString("en-IN") %> / night</p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</body>